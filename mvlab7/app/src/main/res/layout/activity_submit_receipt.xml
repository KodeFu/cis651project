<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitReceiptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_category"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="Category:"
                    />
                <Spinner
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_limit"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll_category">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="Amount ($):"
                    />
                <EditText
                    android:id="@+id/limit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="16dp"
                    android:hint="100.00"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_upload_photo"
                app:layout_constraintBottom_toBottomOf="@id/btn_upload_photo"
                android:textSize="16dp"
                android:text="Receipt:"
                />
            <Button
                android:id="@+id/btn_upload_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_limit"
                android:textSize="16dp"
                android:text="Upload Photo"
                android:onClick="onClickUploadPhoto"/>
            <ImageView
                android:id="@+id/iv_receipt"
                android:layout_width="match_parent"
                android:layout_height="600px"
                app:layout_constraintTop_toBottomOf="@id/btn_upload_photo"
                android:scaleType="fitXY"
                android:hint="100.00"
                android:background="@color/colorPrimaryDark"/>
            <Button
                android:id="@+id/btn_submit_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_receipt"
                android:textSize="16dp"
                android:text="Submit Receipt"
                android:onClick="onClickSubmitReceipt"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <include layout="@layout/common_navigation_view"/>

</androidx.drawerlayout.widget.DrawerLayout>
