<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/caption_expense_date"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".3"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16dp"
        android:text="Expense Date:"
        />
    <TextView
        android:id="@+id/expense_date"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/caption_name"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".3"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/caption_expense_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16dp"
        android:text="Name:"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/expense_date"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/caption_category"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".3"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/caption_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16dp"
        android:text="Category:"
        />
    <TextView
        android:id="@+id/category"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/caption_amount"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".3"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/caption_category"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16dp"
        android:text="Amount ($):"
        />
    <TextView
        android:id="@+id/amount"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/caption_description"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".3"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/caption_amount"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16dp"
        android:text="Description:"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/amount"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:minLines="4"
        android:maxLines="4"
        android:scrollbars="vertical"
        />
    <TextView
        android:id="@+id/tv_receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:textSize="16dp"
        android:text="Receipt:"
        />
    <ImageView
        android:id="@+id/iv_receipt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/tv_receipt"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
