<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitReceiptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/caption_expense_date"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".3"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16dp"
                android:text="Expense Date:"
                />
            <TextView
                android:id="@+id/expense_date"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".7"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".3"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/category"
                app:layout_constraintBottom_toBottomOf="@id/category"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16dp"
                android:text="Category:"
                />
            <Spinner
                android:id="@+id/category"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".7"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/expense_date"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".3"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/amount"
                app:layout_constraintBottom_toBottomOf="@id/amount"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16dp"
                android:text="Amount ($):"
                />
            <EditText
                android:id="@+id/amount"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".7"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/category"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="16dp"
                android:hint="100.00"
                />
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".3"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/amount"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16dp"
                android:text="Description:"
                />
            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".7"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/amount"
                app:layout_constraintRight_toRightOf="parent"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                android:minLines="4"
                android:maxLines="4"
                android:scrollbars="vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_take_photo"
                app:layout_constraintBottom_toBottomOf="@id/btn_take_photo"
                android:textSize="16dp"
                android:text="Receipt:"
                />
            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_description"
                android:textSize="16dp"
                android:text="Take Photo"
                android:onClick="onClickTakePhoto"/>
            <ImageView
                android:id="@+id/iv_receipt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@id/btn_take_photo"
                app:layout_constraintBottom_toTopOf="@id/btn_submit_receipt"
                android:src="@drawable/ic_empty_photo"/>
            <Button
                android:id="@+id/btn_submit_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="16dp"
                android:text="Submit Receipt"
                android:onClick="onClickSubmitReceipt"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include layout="@layout/common_status_bar"/>
    </LinearLayout>
    <include layout="@layout/common_navigation_view"/>

</androidx.drawerlayout.widget.DrawerLayout>
