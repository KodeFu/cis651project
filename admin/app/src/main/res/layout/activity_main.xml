<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_email"
        app:layout_constraintBottom_toBottomOf="@id/et_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_email"
        android:text="Email:"/>
    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_email"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Email"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_phone"
        app:layout_constraintBottom_toBottomOf="@id/et_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_phone"
        android:text="Phone:"/>
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintLeft_toRightOf="@id/tv_phone"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Phone Number"/>
    <TextView
        android:id="@+id/tv_verified"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_verified"
        app:layout_constraintBottom_toBottomOf="@id/et_verified"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_verified"
        android:text="Verified:"/>
    <EditText
        android:id="@+id/et_verified"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        app:layout_constraintLeft_toRightOf="@id/tv_verified"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Email Verified (true or false)"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_name"
        app:layout_constraintBottom_toBottomOf="@id/et_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_name"
        android:text="Name:"/>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_verified"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Display Name"/>
    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_photo"
        app:layout_constraintBottom_toBottomOf="@id/et_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_photo"
        android:text="Photo:"/>
    <EditText
        android:id="@+id/et_photo"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintLeft_toRightOf="@id/tv_photo"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Photo URL"/>
    <TextView
        android:id="@+id/tv_disabled"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_disabled"
        app:layout_constraintBottom_toBottomOf="@id/et_disabled"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_disabled"
        android:text="Disabled:"/>
    <EditText
        android:id="@+id/et_disabled"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_photo"
        app:layout_constraintLeft_toRightOf="@id/tv_disabled"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Disabled (true or false)"/>
    <Button
        android:id="@+id/btn_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/et_disabled"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_set"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="GET"
        android:onClick="onClickGet"/>
    <Button
        android:id="@+id/btn_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/et_disabled"
        app:layout_constraintLeft_toRightOf="@id/btn_get"
        app:layout_constraintRight_toRightOf="parent"
        android:text="SET"
        android:onClick="onClickSet"/>

</androidx.constraintlayout.widget.ConstraintLayout>