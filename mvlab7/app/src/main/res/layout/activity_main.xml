<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/create_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Create Group"
        android:onClick="OnClickCreateGroup"/>
    <Button
        android:id="@+id/join_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_group_button"
        android:text="Join Group"
        android:onClick="OnClickJoinGroup"/>
    <Button
        android:id="@+id/administer_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_group_button"
        android:text="Administer Group"
        android:onClick="OnClickAdministerGroup"/>
    <Button
        android:id="@+id/submit_receipt_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/administer_group_button"
        android:text="Submit Receipt"
        android:onClick="OnClickSubmitReceipt"/>

</androidx.constraintlayout.widget.ConstraintLayout>